# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/mlnf?retryWrites=true&w=majority

# Authentication
JWT_SECRET=generate_a_64_char_hex_secret_here
SESSION_SECRET=generate_another_64_char_hex_secret_here

# Client Configuration
CLIENT_URL=https://mlnf.net

# File Upload
MAX_FILE_SIZE=104857600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Stripe (Optional - service disabled if not provided)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal (Optional - service disabled if not provided)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# Blockonomics Bitcoin (Optional - service disabled if not provided)
BLOCKONOMICS_API_KEY=
BLOCKONOMICS_CALLBACK_SECRET=

# Ethereum (Optional - service disabled if not provided)
ETH_WALLET_ADDRESS=
ETH_PRIVATE_KEY=

# Analytics
PLAUSIBLE_DOMAIN=mlnf.net
PLAUSIBLE_API_KEY=your_plausible_api_key

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2a$10$YourBcryptHashedPasswordHere

# Runegold System
RUNEGOLD_INITIAL_RESERVE=0

# Email (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@mlnf.net