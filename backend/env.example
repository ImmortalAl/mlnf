# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb+srv://username:password@mlnf.xxxxx.mongodb.net/mlnf?retryWrites=true&w=majority

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session Secret
SESSION_SECRET=your-session-secret-change-this-in-production

# CORS Origin
CLIENT_URL=http://localhost:8080

# File Upload
MAX_FILE_SIZE=104857600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_RUNEGOLD_1000=price_your_price_id_for_1000_runegold
STRIPE_PRICE_ID_RUNEGOLD_5000=price_your_price_id_for_5000_runegold
STRIPE_PRICE_ID_RUNEGOLD_10000=price_your_price_id_for_10000_runegold

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Blockonomics
BLOCKONOMICS_API_KEY=your_blockonomics_api_key
BLOCKONOMICS_CALLBACK_SECRET=your_callback_secret

# Web3 (Ethereum)
ETH_WALLET_ADDRESS=0xYourEthereumWalletAddress
INFURA_PROJECT_ID=your_infura_project_id

# Email (for notifications - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Plausible Analytics
PLAUSIBLE_DOMAIN=mlnf.net
PLAUSIBLE_API_KEY=your_plausible_api_key

# Admin
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2a$10$YourBcryptHashedPasswordHere

# Runegold Economy
RUNEGOLD_DAILY_LOGIN=10
RUNEGOLD_VIDEO_UPLOAD=50
RUNEGOLD_COMMENT=5
RUNEGOLD_REFERRAL=100
RUNEGOLD_INITIAL_RESERVE=1000000

# Feature Flags
ENABLE_VIDEO_UPLOADS=true
ENABLE_DONATIONS=true
ENABLE_MERCH=false
ENABLE_P2P_MESSAGING=true
